@model SeekerDashboardModel
<section class="dashboard-section">
    <div class="container">
        <div class="dashboard-header">
            <h1>Job Seeker Dashboard</h1>
            <a href="../jobs/list.html" class="btn">Browse Jobs</a>
        </div>

        <div class="dashboard-stats">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-file-alt"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Applications</h3>
                    <p>Applications</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-eye"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.ProfileViews</h3>
                    <p>Profile Views</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <div class="stat-content">
                    <h3>3</h3>
                    <p>Notifications</p>
                </div>
            </div>
        </div>

        <div class="dashboard-content">
            <div class="dashboard-main">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h2>Recent Applications</h2>
                        <a href="#" class="view-all">View All</a>
                    </div>
                    <div class="applications-list">
                        @foreach (var item in Model.JobApplyList)
                        {
                            <div class="application">
                                <div class="application-info">
                                    <h3>@item.Job.JobTitle</h3>
                                    <p><strong>Status:</strong> <span class="status @(item.Status==SmatJobPortal.Data.JobApplyStatus.Accepted?"reviewed":"pending")">@item.Status</span></p>
                                    <p><strong>Applied:</strong> @(Math.Round((DateTime.Now-item.AppliedAt).TotalDays+1)) days ago</p>
                                </div>
                                <div class="application-actions">
                                    <a asp-controller="SeekerDashboard" asp-action="Application" asp-route-id="@item.Id" class="btn btn-small">View</a>
                                    <form asp-controller="SeekerDashboard" asp-action="Withdraw" method="post" style="display:inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-small btn-danger">Withdraw</button>
                                    </form>
                                </div>
                            </div>
                        }

                    </div>
                </div>

                <div class="dashboard-card">
                    <div class="card-header">
                        <h2>Latest Jobs</h2>
                        <a href="../jobs/list.html" class="view-all">View All</a>
                    </div>
                    <div class="jobs-list">
                        @foreach (var item in Model.JobList)
                        {
                            <div class="job-item">
                                <div class="job-info">
                                    <h3>@item.JobTitle</h3>
                                    <p><i class="fas fa-map-marker-alt"></i>@item.JobLocation</p>
                                    <p><i class="fas fa-clock"></i> Posted Less Than @(Math.Round((DateTime.Now - item.AddedTime).TotalDays) + 1) days ago</p>
                                </div>
                                <div class="job-actions">
                                    <a asp-controller="Job" asp-action="Index" asp-route-id="@item.Id" class="btn btn-small">View</a>
                                    <a asp-controller="SeekerDashboard" asp-action="Apply" asp-route-id="@item.Id" class="btn btn-small">Apply</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="dashboard-sidebar">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h2>Profile Completeness</h2>
                    </div>
                    <div class="profile-completeness">
                        <div class="progress-bar">
                            <div class="progress" style="width: 60%"></div>
                        </div>
                        <p>60% complete</p>
                        <a href="#" class="btn btn-small btn-block">Complete Profile</a>
                    </div>
                </div>

                <div class="dashboard-card">
                    <div class="card-header">
                        <h2>Quick Actions</h2>
                    </div>
                    <div class="quick-actions">
                        <a href="#" class="btn btn-block">
                            <i class="fas fa-file-upload"></i> Upload Resume
                        </a>
                        <a href="#" class="btn btn-block">
                            <i class="fas fa-search"></i> Search Jobs
                        </a>
                        <a href="#" class="btn btn-block">
                            <i class="fas fa-bell"></i> Notifications
                        </a>
                    </div>
                </div>

                <div class="dashboard-card">
                    <div class="card-header">
                        <h2>Recent Notifications</h2>
                    </div>
                    <div class="notifications-list">
                        <div class="notification">
                            <p>Tech Solutions Inc. viewed your profile</p>
                            <span>2 hours ago</span>
                        </div>
                        <div class="notification">
                            <p>Your application for Frontend Developer was received</p>
                            <span>1 day ago</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@using Microsoft.AspNetCore.Identity
@using SmatJobPortal.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SmartJobPortal</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/auth.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <div class="container">
            <nav>
                <div class="logo">
                    <h1>Smart<span>Jobs</span></h1>
                </div>
                <ul class="nav-links">
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li><a asp-action="ListJob" asp-controller="Job">Browse Jobs</a></li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="notif">
                            <a href="#" id="notifBell" title="Notifications"><i class="fas fa-bell"></i></a>
                            <div id="notifDropdown" class="notif-dropdown" style="display:none;">
                                <div class="notif-header">Notifications</div>
                                <div id="notifList" class="notif-list"></div>
                                <div class="notif-footer"><a asp-controller="EmployerDashboard" asp-action="ViewApplications">View applications</a></div>
                            </div>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle">
                                <i class="fas fa-user-circle"></i> @User.Identity?.Name
                                <i class="fas fa-caret-down"></i>
                            </a>
                            <ul class="dropdown-menu">
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a asp-controller="Admin" asp-action="PendingJobs">Admin: Pending Jobs</a></li>
                                }
                                @if (User.IsInRole("Employer"))
                                {
                                    <li><a asp-controller="EmployerDashboard" asp-action="Index" class="active">Dashboard</a></li>
                                }

                                @if (User.IsInRole("JobSeeker"))
                                {
                                    <li><a asp-controller="SeekerDashboard" asp-action="Index" class="active">Dashboard</a></li>
                                }
                                <li><a href="#">Profile</a></li>
                                <li><a href="#">Settings</a></li>
                                <li>
                                    <a href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">Logout</a>
                                    <form id="logout-form" method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="display:none;"></form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a class="btn" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                        <li><a asp-area="Identity" asp-page="/Account/Login" class="active">Login</a></li>
                    }
                </ul>

                <div class="burger">
                    <i class="fas fa-bars"></i>
                </div>
            </nav>
        </div>
    </header>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>About Us</h3>
                    <p>Smart Job Portal connects job seekers with employers efficiently and effectively.</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="../index.html">Home</a></li>
                        <li><a href="../jobs/list.html">Browse Jobs</a></li>
                        <li><a href="login.html">Login</a></li>
                        <li><a href="register.html">Register</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Contact Us</h3>
                    <p>Email: info@smartjobportal.com</p>
                    <p>Phone: +1 (123) 456-7890</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2023 Smart Job Portal. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        (function(){
            const bell = document.getElementById('notifBell');
            const dropdown = document.getElementById('notifDropdown');
            const list = document.getElementById('notifList');
            if(bell && dropdown){
                bell.addEventListener('click', function(e){
                    e.preventDefault();
                    dropdown.style.display = dropdown.style.display === 'none' ? 'block' : 'none';
                });
                document.addEventListener('click', function(e){
                    if(!dropdown.contains(e.target) && e.target !== bell){
                        dropdown.style.display = 'none';
                    }
                });
            }

            function addNotif(text){
                if(!list) return;
                const item = document.createElement('div');
                item.className = 'notif-item';
                item.textContent = text;
                list.prepend(item);
            }

            if (window.signalR === undefined && window.signalr === undefined) return;
            try{
                const connection = new signalR.HubConnectionBuilder().withUrl('/hubs/notifications').withAutomaticReconnect().build();
                connection.on('jobApplicationCreated', function(data){
                    addNotif('New application received for Job #' + data.jobId + ' from ' + data.applicant);
                });
                connection.on('applicationAccepted', function(data){
                    addNotif('Your application for Job #' + data.jobId + ' was accepted');
                });
                connection.start().catch(function(err){ console.warn(err); });
            }catch(err){ console.warn(err); }
        })();
    </script>
    <script src="../js/auth.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

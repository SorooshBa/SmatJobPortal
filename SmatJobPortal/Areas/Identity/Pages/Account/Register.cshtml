@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="auth-container">
    <div class="auth-form">
        <h2>Create Your Account</h2>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div class="form-group">
                <label asp-for="Input.Role">Role</label>
                <select asp-for="Input.Role" class="form-control" required>
                    <option value="JobSeeker" selected>Job Seeker</option>
                    <option value="Employer">Employer</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" id="fullName" class="form-control" required />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" id="email" class="form-control" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" id="password" class="form-control" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" id="confirmPassword" class="form-control" required />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-block">Register</button>
        </form>

        <div class="auth-footer">
            <p>Already have an account? <a asp-area="Identity" asp-page="/Account/Login">Login here</a></p>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Page load debugging
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Page loaded');
            console.log('Role select element:', document.querySelector('select[name="Input.Role"]'));
        });
        

    </script>
}
